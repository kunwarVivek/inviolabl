// prisma/schema.prisma

datasource db {
  url      = "postgresql://postgres:1234@localhost:5434/multitenant"
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model users {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  username      String?
  image     String?
  password  String?
  provider  String?
}

model tenant {
  id        Int      @id @default(autoincrement())
  name      String
  domain    String   @unique
}
